<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee /WEB-INF/schema/web-facesconfig_2_0.xsd"
	version="2.0" metadata-complete="false">
	<!-- This file must be present with our jar, even if it is empty. Otherwise, 
		our Java annotations won't get scanned! -->
	<managed-bean>
		<managed-bean-name>providerDao</managed-bean-name>
		<managed-bean-class>com.java.hms.ProviderDAOImpl</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>provider</managed-bean-name>
		<managed-bean-class>com.java.hms.Provider</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>paginationDao</managed-bean-name>
		<managed-bean-class>com.java.hms.JsfPaginationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	 <managed-bean>
		<managed-bean-name>admin</managed-bean-name>
		<managed-bean-class>com.java.hms.AdminLogin
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean> 
 
  <managed-bean>
		<managed-bean-name>adminDao</managed-bean-name>
		<managed-bean-class>com.java.hms.AdminLoginImpl</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>adminController</managed-bean-name>
		<managed-bean-class>com.java.hms.AdminController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
 
		<managed-property>
			<property-name>admin</property-name>
			<property-class>com.java.hms.AdminLogin</property-class>
			<value>#{admin}</value>
		</managed-property>
 
		<managed-property>
			<property-name>adminDao</property-name>
			<property-class>com.java.hms.AdminLoginImpl</property-class>
			<value>#{adminDao}</value>
		</managed-property>
	</managed-bean> 
</faces-config>